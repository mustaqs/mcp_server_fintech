# Staging Environment Configuration

# Application Settings
APP_NAME=MCP Fintech Platform
APP_ENV=staging
DEBUG=false
LOG_LEVEL=info

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
DB_DRIVER=postgresql
DB_HOST=staging-db.internal
DB_PORT=5432
DB_NAME=mcp_fintech_staging
DB_USER=app_user
DB_PASSWORD=strong_password_here

# Redis Settings
REDIS_HOST=staging-redis.internal
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=strong_password_here

# JWT Settings
JWT_SECRET_KEY=change_this_to_a_secure_random_string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ORIGINS=https://staging.fintech-app.com

# MCP Settings
MCP_SERVER_NAME=Fintech MCP Server (Staging)
MCP_SERVER_VERSION=0.1.0

# Third-Party API Keys
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=development

STRIPE_API_KEY=your_stripe_api_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

ALPACA_API_KEY=your_alpaca_api_key
ALPACA_API_SECRET=your_alpaca_api_secret
ALPACA_API_BASE_URL=https://paper-api.alpaca.markets

# Security Settings
SECURITY_PASSWORD_SALT=change_this_to_a_secure_random_string
SECURITY_BCRYPT_ROUNDS=12

# AWS Settings
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-staging-bucket-name

# Monitoring
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_api_key
PROMETHEUS_METRICS_ENABLED=true
